<%#
    Style Partial
    Theme: Hubble JS Default
    Render Theme Styles
    @param { Object } theme data
%>
<style>
    .is-primary {
        color: <%= theme.palette.primary %>;
    }

    .is-secondary {
        color: <%= theme.palette.secondary %>;
    }

    .hero-pattern {
        <%- include(`../patterns/${theme.pattern.name}`, { primary: theme.pattern.color.replace('#', '%23') }); %>
        background-size: <%= theme.pattern.size %> <%= theme.pattern.size %>;
    }

    <%# CSS %>
    <%- include('../assets/css/project.min.css'); %>

    <%# Social Media Styles %>
    <% Object.keys(theme.social).forEach(function (key) { %>
        .<%= key %> {
            background-color: <%= theme.social[key].color %>;
        }
        .<%= key %>:hover {
            background-color: <%= theme.social[key].color %>;
        }
    <% }); %>
</style>