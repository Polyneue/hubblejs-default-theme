<%#
    Style Partial
    Theme: Hubble JS Default
    Render Theme Styles
    @param { Object } theme data
%>
<style>
    .is-primary {
        color: <%= theme.palette.primary %>;
    }
    .is-secondary {
        color: <%= theme.palette.secondary %>;
    }
    .pattern {
        <%- include(`../patterns/${theme.pattern.name}`, { primary: theme.pattern.color.replace('#', '%23') }); %>
        background-size: <%= theme.pattern.scale %>;
        background-repeat: repeat;
    }

    <%# CSS %>
    <%- include('../assets/css/project.min.css'); %>
</style>